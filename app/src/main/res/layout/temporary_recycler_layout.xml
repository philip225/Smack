<?xml version="1.0" encoding="utf-8"?>
<!--
IMPORTANT!
Notice the ConstraintLayout layout_height is set to wrap_content, we are
using a recycler view which from API 23, requires the height to be set to
wrap_content, on any layout.
If it is set to anything other that wrap_content then it will result in only
one item being shown!
-->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/temporaryTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/temporary_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Temporary!" />
</androidx.constraintlayout.widget.ConstraintLayout>